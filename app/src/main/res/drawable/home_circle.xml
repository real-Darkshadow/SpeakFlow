<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outermost circle -->
    <item
        android:top="10dp"
        android:left="10dp"
        android:right="10dp"
        android:bottom="10dp">
        <shape android:shape="oval">
            <stroke
                android:width="0.5dp"
                android:color="@color/text_grey" />
            <size
                android:width="100dp"
                android:height="100dp" />
        </shape>
    </item>

    <!-- Second circle -->
    <item
        android:top="20dp"
        android:left="20dp"
        android:right="20dp"
        android:bottom="20dp">
        <shape android:shape="oval">
            <stroke
                android:width="0.5dp"
                android:color="@color/text_grey" />
            <size
                android:width="80dp"
                android:height="80dp" />
        </shape>
    </item>

    <!-- Third circle -->
    <item
        android:top="30dp"
        android:left="30dp"
        android:right="30dp"
        android:bottom="30dp">
        <shape android:shape="oval">
            <stroke
                android:width="0.5dp"
                android:color="@color/text_grey" />
            <size
                android:width="60dp"
                android:height="60dp" />
        </shape>
    </item>

    <!-- Innermost circle -->
    <item
        android:top="40dp"
        android:left="40dp"
        android:right="40dp"
        android:bottom="40dp">
        <shape android:shape="oval">
            <stroke
                android:width="0.5dp"
                android:color="@color/text_grey" />
            <size
                android:width="40dp"
                android:height="40dp" />
        </shape>
    </item>
</layer-list>